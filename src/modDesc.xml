	</extraSourceFiles>

	<actions>
		<action name="MD_TOGGLE" axisType="HALF" />
	</actions>

	<inputBinding>
		<actionBinding action="MD_TOGGLE">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_lalt KEY_m" />
		</actionBinding>
	</inputBinding>

	<l10n>
		<text name="input_MD_TOGGLE">
			<en>Toggle mouse driving</en>
		</text>
		<text name="md_mod_settings_title">
			<en>Mouse Driving</en>
		</text>
		<text name="md_setting_deadZone">
			<en>Deadzone</en>
		</text>
		<text name="md_setting_deadZone_tooltip">
			<en>Adjust the mouse virtual axis "deadzone".</en>
		</text>
		<text name="md_setting_sensitivity">
			<en>Sensitivity</en>
		</text>
		<text name="md_setting_sensitivity_tooltip">
			<en>Adjust the mouse virtual axis "sensitivity".</en>
		</text>
		<text name="md_setting_hud">
			<en>Axes HUD</en>
		</text>
		<text name="md_setting_hud_tooltip">
			<en>Whether to show or not the input axes HUD.</en>
		</text>
	</l10n>
